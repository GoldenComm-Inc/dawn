{% schema %}
{
  "name": "t:sections.slideshow.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "select",
      "id": "slide_height",
      "options": [
        {
          "value": "adapt-image",
          "label": "t:sections.slideshow.settings.slide_height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.slideshow.settings.slide_height.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.slideshow.settings.slide_height.options__3.label"
        },
        {
          "value": "large",
          "label": "t:sections.slideshow.settings.slide_height.options__4.label"
        }
      ],
      "default": "adapt-image",
      "label": "t:sections.slideshow.settings.slide_height.label"
    },
    {
      "type": "select",
      "id": "slider_visual",
      "options": [
        {
          "value": "numbers",
          "label": "t:sections.slideshow.settings.slider_visual.options__1.label"
        },
        {
          "value": "dots",
          "label": "t:sections.slideshow.settings.slider_visual.options__2.label"
        },
        {
          "value": "counter",
          "label": "t:sections.slideshow.settings.slider_visual.options__3.label"
        }
      ],
      "default": "numbers",
      "label": "t:sections.slideshow.settings.slider_visual.label"
    },
    {
      "type": "select",
      "id": "text_size",
      "options": [
        {
          "value": "medium",
          "label": "t:sections.slideshow.settings.text_size.options__1.label"
        },
        {
          "value": "large",
          "label": "t:sections.slideshow.settings.text_size.options__2.label"
        }
      ],
      "default": "medium",
      "label": "t:sections.slideshow.settings.text_size.label"
    },
    {
      "type": "select",
      "id": "visual_style",
      "options": [
        {
          "value": "full_bleed",
          "label": "t:sections.slideshow.settings.visual_style.options__1.label"
        },
        {
          "value": "grid",
          "label": "t:sections.slideshow.settings.visual_style.options__2.label"
        },
        {
          "value": "grid_peek",
          "label": "t:sections.slideshow.settings.visual_style.options__3.label"
        }
      ],
      "default": "full_bleed",
      "label": "t:sections.slideshow.settings.visual_style.label"
    },
    {
      "type": "select",
      "id": "text_align",
      "options": [
        {
          "value": "top_left",
          "label": "t:sections.slideshow.settings.text_align.options__1.label"
        },
        {
          "value": "top_center",
          "label": "t:sections.slideshow.settings.text_align.options__2.label"
        },
        {
          "value": "top_right",
          "label": "t:sections.slideshow.settings.text_align.options__3.label"
        },
        {
          "value": "middle_left",
          "label": "t:sections.slideshow.settings.text_align.options__4.label"
        },
        {
          "value": "middle_center",
          "label": "t:sections.slideshow.settings.text_align.options__5.label"
        },
        {
          "value": "middle_right",
          "label": "t:sections.slideshow.settings.text_align.options__6.label"
        },
        {
          "value": "bottom_left",
          "label": "t:sections.slideshow.settings.text_align.options__7.label"
        },
        {
          "value": "bottom_center",
          "label": "t:sections.slideshow.settings.text_align.options__8.label"
        },
        {
          "value": "bottom_right",
          "label": "t:sections.slideshow.settings.text_align.options__9.label"
        }
      ],
      "default": "middle_center",
      "label": "t:sections.slideshow.settings.text_align.label"
    },
    {
      "type": "header",
      "content": "t:sections.slideshow.settings.options.content"
    },
    {
      "type": "checkbox",
      "id": "show_text_box",
      "label": "t:sections.slideshow.settings.show_text_box.label",
      "default": true
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.slideshow.settings.image_overlay_opacity.label",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:sections.slideshow.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "change_slides_counter",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.slideshow.settings.change_slides_counter.label",
      "default": 5
    },
    {
      "type": "header",
      "content": "t:sections.slideshow.settings.mobile.content"
    },
    {
      "type": "checkbox",
      "id": "show_text_below",
      "label": "t:sections.slideshow.settings.show_text_below.label",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "limit": 1,
      "settings": [
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.options__1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.options__2.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.options__3.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.options__4.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.options__5.label"
            }
          ],
          "default": "background-1",
          "label": "t:sections.slideshow.blocks.slide.settings.color_scheme.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "header",
          "content": "t:sections.slideshow.blocks.slide.settings.options.content"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Image slide",
          "label": "t:sections.slideshow.blocks.slide.settings.heading.label"
        },
        {
          "type": "text",
          "id": "subheading",
          "default": "Tell your brand's story through images",
          "label": "t:sections.slideshow.blocks.slide.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Shop all",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.slideshow.blocks.slide.settings.link.label"
        },
        {
          "type": "checkbox",
          "id": "use_outline_style",
          "label": "t:sections.slideshow.blocks.slide.settings.use_outline_style.label",
          "default": false
        }
      ],
      "limit": 6
    }
  ],
  "presets": [
    {
      "name": "t:sections.slideshow.presets.name",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
